    <%= f.label :vat_sales %><br />
    <%= f.text_field :vat_sales ,:class =>"field1" %>
  </div>
  <div class="field">
    <%= f.label :vat_purchase %><br />
    <%= f.text_field :vat_purchase ,:class =>"field1" %>
