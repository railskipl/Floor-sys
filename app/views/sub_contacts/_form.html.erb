    <%= f.label :address2 %><br />
    <%= f.text_field :address2 ,:class =>"field1" %>
  </div>
  <div class="field">
    <%= f.label :town %><br />
    <%= f.text_field :town ,:class =>"field1" %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
