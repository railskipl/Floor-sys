<%= form_for(@company, :html => { :multipart => true }) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name %>
  </div>
  <div class="field">
    <%= f.label :company_address1 %><br />
    <%= f.text_field :company_address1 %>
  </div>
  <div class="field">
    <%= f.label :company_address2 %><br />
    <%= f.text_field :company_address2 %>
  </div>
  <div class="field">
    <%= f.label :company_town %><br />
    <%= f.text_field :company_town %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= select :company, :country, Country.all.map {|c| [c.country_name]} %>
  </div>
  <div class="field">
    <%= f.label :post_code %><br />
    <%= f.text_field :post_code %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :fax_number %><br />
    <%= f.text_field :fax_number %>
  </div>
  <div class="field">
    <%= f.label :web_url %><br />
    <%= f.text_field :web_url %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :vat_no %><br />
    <%= f.text_field :vat_no %>
  </div>
  <div class="field">
    <%= f.label :vat_rate %><br />
    <%= f.text_field :vat_rate %>
  </div>
  <div class="field">
    <%= f.label :reg_no %><br />
    <%= f.text_field :reg_no %>
    <%= f.hidden_field :user_id, :value=>"#{current_user.id}" %>
  </div>
  <div class="field">
    <%= f.label :logo %><br />
    <%= f.file_field :logo %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
