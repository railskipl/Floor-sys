
<h1>Listing companies</h1>

<table>
  <tr>
    <th>Company name</th>
    <th>Company address1</th>
    
    <th>Post code</th>
    <th>Phone number</th>
    <th>Fax number</th>
   
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.company_name %></td>
    <td><%= company.company_address1 %></td>
    
    <td><%= company.post_code %></td>
    <td><%= company.phone_number %></td>
    <td><%= company.fax_number %></td>
    
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', {:controller=>"companies", :action=>"destroy", :id=>"#{company.id}"} , { :confirm => 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>



