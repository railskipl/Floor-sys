<h1>Listing sales_types</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Company</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sales_types.each do |sales_type| %>
  <tr>
    <td><%= sales_type.code %></td>
    <td><%= sales_type.name %></td>
    <td><%= sales_type.company_id %></td>
    <td><%= link_to 'Show', sales_type %></td>
  
    <td><%= link_to 'Destroy', {:controller=>"sales_types", :action=>"destroy", :id=>"#{sales_type.id}"} , { :confirm => 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>

