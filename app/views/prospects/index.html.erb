	<div id="right2">
  <h1>Listing prospects</h1>
  
  <div class="formbox">

  <table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
  <tr>
    <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Telephone<a></th>
    <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Online</a></th>
    <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Walk in</a></th>
    <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Product interest</a></th>
    <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Quotation number sent</a></th>
    
    <th align="center" valign="middle" class="table-header-options line-left"><a href="">Action</a></th>
  
  </tr>

  <% @prospects.each do |prospect| %>
  <tr>
    <td><%= prospect.telephone %></td>
    <td><%= prospect.online %></td>
    <td><%= prospect.walk_in %></td>
    <td><%= prospect.product_interest %></td>
    <td><%= prospect.quotation_number_sent %></td>
    <td><%= link_to '', prospect, :class => "icon-1 info-tooltip" %> <%= link_to '', edit_prospect_path(prospect), :class => "icon-2 info-tooltip" %> <%= link_to '', {:controller=>'prospects', :action=>'destroy', :id=>"#{prospect.id}"}, :class => "icon-3 info-tooltip" %></td>
  </tr>
  <% end %>
  </table>
  
