       <ul>

       <li> <%= link_to 'New', new_purchase_order_path %></li>


       </ul>
       </li>
       <% end %>
       
       <% if can? :new, PurchaseOrder %>
        <li><%= link_to "Purchase Invoice", {:controller=>"purchase_orders", :action=>"invoice"} %></li>
         <% end %>
       
	     </ul>
	     <br style="clear: left" />
