<div class="tabscontainer">
     <div class="tabs">
         <div class="tab selected first" id="tab_menu_1">
             <div class="link">General</div>
             <div class="arrow"></div>
         </div>
         <div class="tab" id="tab_menu_2">
             <div class="link">Communications</div>
             <div class="arrow"></div>
         </div>
		 
		 
          <div class="tab" id="tab_menu_3">
             <div class="link">Notes </div>
             <div class="arrow"></div>
         </div>
		 
    </div>
    
   
  <%= form_for(@customer) do |f| %> 
	<div class="curvedContainer">
		<div class="tabcontent" id="tab_content_1" style="display:block">
    <table width="60%" border="0" cellspacing="10" cellpadding="10">
        <tr>
          <td align="right" valign="middle">Contact </td>
          <td align="center" valign="middle">:</td>
          <td><%= select :customer, :contact_id, @contact.map {|c| ["#{c.contact_name}", c.id]} %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Nominal GL Code</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :nominal_gl_code %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Vat Rate Sales</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :vat_rate_sales %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Vat Rate Purchases </td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :vat_rate_purchases %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Contact Group</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :contact_group %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Company No</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :company_no %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Business Type</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :business_type %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Bank Name</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :bank_name %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Account Name</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :account_name %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Sort Code</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :sort_code %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Account Number</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :account_number %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Credit Limit</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :credit_limit %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Terms</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :terms %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">On Hold</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :on_hold %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Account Balance</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :account_balance %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Note Date</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :note_date %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Note Type</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :note_type %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Note Description</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :note_description %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Attachement Date</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.date_select :attachement_date %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Attachement Type</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :attachement_type %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Attachement Details</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_area :attachement_detail, :rows => 2 %></td>
        </tr>
      </table>
		</div>
		<div class="tabcontent" id="tab_content_2">
			<table width="60%" border="0" cellspacing="10" cellpadding="5">
        <tr>
          <td align="right" valign="middle">Date</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.datetime_select :communication_date %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Contact Type</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_field :contact_type %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Outcome</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_area :outcome, :rows => 2 %></td>
        </tr>
       
      </table>
		</div>
		<div class="tabcontent" id="tab_content_3">
			<table width="60%" border="0" cellspacing="10" cellpadding="5">
        <tr>
          <td align="right" valign="middle">Note Date</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.date_select :note_date %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Note</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.text_area :note, :rows => 2 %></td>
        </tr>
        <tr>
          <td align="right" valign="middle">Added By Customer</td>
          <td align="center" valign="middle">:</td>
          <td>
              <%= f.text_field :added_by_customer %>
              <%= f.hidden_field :company_id, :value=>"#{current_user.company_id}" %>
          </td>
        </tr>
        
        <tr>
          <td align="right" valign="middle">Status</td>
          <td align="center" valign="middle">:</td>
          <td><%= f.select( :status,  { "Customer" => "c", "Prospect" => "p"}) %></td>
        </tr>
     
      </table>
		</div>
		
		
		<div align="center"><%= f.submit "Submit", :class=>"button" %></div>
		
	</div>
	<% end %>
	
</div>
