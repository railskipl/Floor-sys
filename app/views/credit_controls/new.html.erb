	 <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Action</a></th>
	</tr>
<% @contact.credit_controls.each do |credit_control| %>
<tr>
	<td><%= credit_control.credit_limit %></td> 
	<td><%= credit_control.account_hold %></td> 
	<td><%= link_to 'Edit', edit_contact_credit_control_path(params[:contact_id],credit_control.id) %> |
