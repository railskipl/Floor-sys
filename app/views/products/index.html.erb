  	<div id="right2">
    <h1>Listing products</h1>
    
    <div class="formbox">

    <table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
      <tr>
          <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Product name</a></th>
          <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Product type</a></th>
          <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Product group</a></th>
          <th align="center" valign="middle" class="table-header-repeat line-left minwidth-1"><a href="">Supplier</a></th>
          <th align="center" valign="middle" class="table-header-options line-left"><a href="">Action</a></th>
      </tr>

      <% @products.each do |product| %>
        <tr>
            <td><%= product.product_name %></td>
            <td>
                <% if product.product_type_id.nil? %>
                <% else %>
                <% @producttype = ProductType.find(product.product_type_id) %>
                  <%= @producttype.name %>
                <% end %>
            </td>
            <td>
                <% if product.product_group_id.nil? %>
                <% else %>
                <% @producttype = ProductGroup.find(product.product_group_id) %>
                  <%= @producttype.name %>
                <% end %>
            </td>
            <td>
                <% if product.supplier_id.nil? %>
                  <% else %>
                  <% @supplier = Supplier.find(product.supplier_id) %>
                    <%= @supplier.account_reference %>
                  <% end %>
            </td>
            <td>  
              <%= link_to '', product, :class =>"icon-1 info-tooltip" %> <%= link_to '', edit_product_path(product), :class =>"icon-2 info-tooltip" %> <%= link_to '', {:controller=>'products', :action=>'destroy', :id=>"#{product.id}"}, :confirm => 'Are you sure?',  :class => "icon-3 info-tooltip" %>
                 
            </td>
        </tr>
      <% end %>

    </table>
    
