<p id="notice"><%= notice %></p>

<p>
  <b>Category:</b>
  <%= @product.categories.collect { |cat| cat.category_name} %>
</p>

<p>
  <b>Product code:</b>
  <%= @product.product_code %>
</p>

<p>
  <b>Product type:</b>
  
  <% if @product.product_type_id.nil? %>
  <% else %>
  <% @producttype = ProductType.find(@product.product_type_id) %>
    <%= @producttype.name %>
  <% end %>
</p>

<p>
  <b>Product group:</b>
  <% if @product.product_group_id.nil? %>
   <% else %>
   <% @productgroup = ProductGroup.find(@product.product_group_id) %>
     <%= @productgroup.name %>
   <% end %>
 
</p>

<p>
  <b>Supplier:</b>
  <% if @product.supplier_id.nil? %>
    <% else %>
    <% @supplier = Supplier.find(@product.supplier_id) %>
      <%= @supplier.account_reference %>
    <% end %>
  
</p>

<p>
  <b>Range name:</b>
  <%= @product.range_name %>
</p>

<p>
  <b>Product fibre:</b>
  <% if @product.product_fibre_id.nil? %>
    <% else %>
    <% @productfibre = ProductFibre.find(@product.product_fibre_id) %>
      <%= @productfibre.name_1 %> <% @productfibre.name_2 %>
    <% end %>
</p>

<p>
  <b>Product backing:</b>
  <% if  @product.product_banking_id.nil? %>
     <% else %>
     <% @productbacking = ProductBacking.find(@product.product_banking_id) %>
       <%= @productbacking.name_1 %> <% @productbacking.name_2 %>
