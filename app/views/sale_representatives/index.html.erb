<h1>Listing sale_representatives</h1>

<table>
  <tr>
    <th>Contact</th>
    <th>Communication date</th>
    
    <th>Contact</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sale_representatives.each do |sale_representative| %>
  <tr>
    <td>
    <% if sale_representative.contact_id.nil? %>
    <% else %>
       <% @contact = Contact.find(sale_representative.contact_id) %>
        <%= @contact.contact_name %>
    <% end %>
    </td>
    <td><%= sale_representative.communication_date %></td>
    
    <td><%= sale_representative.contact %></td>
    
    <td><%= link_to 'Show', sale_representative %></td>
    <td><%= link_to 'Edit', edit_sale_representative_path(sale_representative) %></td>
    <td><%= link_to 'Destroy', {:controller=>'sale_representatives', :action=>'destroy', :id=>"#{sale_representative.id}"}, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

